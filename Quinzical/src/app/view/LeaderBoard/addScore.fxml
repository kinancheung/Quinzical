<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: rgba(255, 255, 255, 0.5); -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.view.LeaderBoard.addScoreController">
   <center>
      <VBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="winningsMessage" style="-fx-text-fill: #f2c602;" text="Winnings statement">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Label text="Enter your name here:" />
                  <TextField fx:id="name" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#cancel" prefWidth="200.0" style="-fx-text-fill: #f2c602; -fx-background-radius: 15; -fx-font-weight: bold;" text="Cancel">
                     <effect>
                        <DropShadow color="#f2c602" offsetX="4.0" offsetY="4.0" />
                     </effect></Button>
                  <Button mnemonicParsing="false" onAction="#addScore" prefWidth="200.0" style="-fx-background-radius: 15; -fx-font-weight: bold; -fx-text-fill: #f2c602;" text="Add Score">
                     <effect>
                        <DropShadow color="#f2c602" offsetX="4.0" offsetY="4.0" />
                     </effect></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 24; -fx-text-fill: #f2c602;" text="Record Winnings">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <StackPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </StackPane.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </AnchorPane>
         </children>
      </StackPane>
   </top>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
